<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <Button
        android:id="@+id/init_btn"
        android:text="init"
        android:textSize="24sp"
        android:gravity="center"
        android:paddingVertical="20dp"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="8dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv"
        android:text="hook list:"
        android:textColor="#5F5C5C"
        android:textSize="18sp"
        android:layout_below="@id/init_btn"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/list_header_divider"
        android:layout_width="match_parent"
        android:layout_below="@id/tv"
        android:background="#2239B9"
        android:layout_height="1dp"/>
    <ListView
        android:id="@+id/listview"
        android:layout_below="@id/list_header_divider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#2239B9"
        android:dividerHeight="1dp"/>
</RelativeLayout>